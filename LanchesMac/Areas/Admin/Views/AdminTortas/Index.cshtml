@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Torta>

<link rel="stylesheet" href="~/css/adminTortas.css" asp-append-version="true" />
<link rel="stylesheet" href="~/LanchesMac.styles.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Index";
}

<h1>Produtos</h1>

<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="Filtrar itens"
           value="@Model.RouteValue["Filter"]" />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true">Procurar Item</span>
    </button>
</form>

<div class="total">
    <h3>Total de Produtos Cadastrados: @Model.TotalRecordCount</h3>
</div>

<p class="newItem">
    <a asp-action="Create">Criar novo produto</a>
</p>

<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DescricaoCurta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Preco)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsLanchePreferido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmEstoque)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescricaoCurta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Preco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsLanchePreferido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmEstoque)
                    </td>
                    <td class="funcao">
                        <a asp-action="Edit" asp-route-id="@item.DoceId">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.DoceId">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.DoceId">Excluir</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
