@model Torta

<link rel="stylesheet" href="~/css/docesResumoTela.css" asp-append-version="true" />
<link rel="stylesheet" href="~/LanchesMac.styles.css" asp-append-version="true" />

<div class="col-sm-4 col-md-4 col-lg-4" id="itens">
	<p class="imagem-container"><img src="@Model.ImagemUrl" class="img-fluid" /></p>
	<h3>Preço: @Model.Preco.ToString("C").Replace("$", "R$")</h3>
	<h4 class="nomeItem">
		<a asp-controller="Doces" asp-action="Details" asp-route-doceId="@Model.DoceId">@Model.Nome</a>
	</h4>

	<p>@Model.DescricaoCurta</p>
	<div>
		<p class="button">
			<a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
			   asp-action="AdicionarItemNoCarrinhoCompra" asp-route-DoceId="@Model.DoceId">
				Incluir no carrinho
			</a>
		</p>
	</div>
</div>

