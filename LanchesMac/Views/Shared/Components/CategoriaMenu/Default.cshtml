<div class="dropdown">
    <a class="btn btn-dark dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Categorias
    </a>

    <ul class="dropdown-menu">
        @foreach(var categoria in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Doces" asp-action="List" style="color:black"
                asp-route-categoria="@categoria.CategoriaNome">@categoria.CategoriaNome</a>
            </li>
        }
        <li class="dropdown-divider"></li>

        <li>
            <a class="dropdown-item" asp-controller="Doces" asp-action="List" style="color:black"
               asp-route-categoria="">Todos os Doces</a>
        </li>
    </ul>
</div>
