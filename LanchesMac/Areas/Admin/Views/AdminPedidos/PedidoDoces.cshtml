@model LanchesMac.ViewModels.PedidoDoceViewModel

@{
    ViewData["Title"] = "PedidoDoces";
    decimal totalPedido = 0;
}

<h1>Itens do Pedido</h1>
<hr />

<h4>Número do pedido  :  @Html.DisplayFor(model => @Model.Pedido.PedidoId)</h4>
<h4>Cliente :  @Html.DisplayFor(model => @Model.Pedido.Nome)</h4>
<h4>Pedido feito em :  @Html.DisplayFor(model => @Model.Pedido.PedidoEnviado)</h4>
<h4>Pedido entregue em :  @Html.DisplayFor(model => @Model.Pedido.PedidoEntregueEm)</h4>

<table class="table">
    @foreach (var item in @Model.Pedido.PedidoItens)
    {
        totalPedido += (@item.Torta.Preco * @item.Quantidade);
        <tr>
            <td align="right">
                <h4>@Html.DisplayFor(modelItem => item.Torta.Nome)</h4>
            </td>
            <td align="right">
                <img src="@item.Torta.ImagemUrl" class="img-fluid" height="100" width="100">
            </td>
            <td align="right">
                <h4>@string.Format("R{0:C}", item.Torta.Preco)</h4>
            </td>
            <td align="right">
                <h4>(@Html.DisplayFor(modelItem => item.Quantidade))</h4>
            </td>
        </tr>
    }
    <tr>
        <td colspan="2">&nbsp;</td>
        <td align="right">
            <h3>Total do Pedido : @string.Format("R{0:C}", @totalPedido)</h3>
        </td>
    </tr>
</table>
<a asp-action="Index" class="btn btn-outline-info">Retornar</a>

